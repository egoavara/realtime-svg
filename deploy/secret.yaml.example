apiVersion: v1
kind: Secret
metadata:
  name: realtime-svg-secret
  namespace: default
type: Opaque
data:
  # Base64 encoded values
  # To encode: echo -n "your-value" | base64
  # To decode: echo "base64-value" | base64 -d
  
  # API Key (optional)
  # apiKey: ""
  
  # Example:
  # apiKey: bXktYXBpLWtleQ==  # "my-api-key" in base64

# Usage:
# 1. Copy this file: cp secret.yaml.example secret.yaml
# 2. Edit secret.yaml and fill in your base64-encoded values
# 3. Apply: kubectl apply -f secret.yaml
# 4. Verify: kubectl get secret realtime-svg-secret -o yaml
#
# Security Note:
# - DO NOT commit secret.yaml to version control
# - Use tools like sealed-secrets or external-secrets in production
# - Rotate secrets regularly
#
# Redis Configuration:
# Redis connection is configured via REDIS_URL environment variable in ConfigMap
# If using external Redis with password, include it in the URL:
#   redis://:password@host:6379/
